                + "inner join usp.caeId cae "
                + "where cae.caeCodigo like :codigoEncuesta" )
                .setParameter("codigoEncuesta", codigoEncuesta)
                .getResultList();
//        System.out.println("NÂº encuestados:" + resultado.size());
        return resultado;
    }

